@model IEnumerable<AirWarCollegeV6._0.Models.Alumnus>
   @{
        ViewBag.Title = "Index";
    }
        <link rel="stylesheet" href="~/Content/table/normalize.min.css">
        <link rel="stylesheet" href="~/Content/table/table.css">
    <div style="padding-top:30px;">
        @Html.ActionLink("Create New", "Create", "Alumni", new { @class = "btn btn-primary btn-large", @style= "margin-left:250px;" })
        @*@Html.ActionLink("Logout", "Admin", "Alumni", new { @class = "btn btn-primary btn-large", @style = "float:right; margin-right:250px;" })*@
    </div>
        <div class="table-users">
            <div class="header1">Alumni</div>
            <table cellspacing="0">
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Rank</th>
                    <th>Course Number</th>
                    <th>Started At</th>
                    <th>Ended At</th>
                    <th>Service</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @{
                                var base64 = Convert.ToBase64String(item.Image);
                                var imagesrc = string.Format("data:image/gif;base64,{0}", base64);
                            }
                            <img src='@imagesrc' style="max-width:100px; max-height:100px" class="image"/>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rank)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.courseNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.startedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.endedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Service)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-primary btn-xs", })
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-primary btn-xs", })
                        </td>
                    </tr>

                                }
            </table>
        </div>

